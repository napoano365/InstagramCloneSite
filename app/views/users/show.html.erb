<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_show_img">
      <%= gravatar_for @user, size: 150 %>
    </section>
  </aside>
  <aside class="col-md-8">
    <div class="user_show_info">
      <section class="userinfoarea">
        <div class="username">
          <%= @user.username %>
        </div>
        <% if current_user?(@user) %>
        <div class="editlink">
          <%= link_to 'プロフィールを編集', edit_user_path %>
        </div>
        <% end %>
        <%= render 'follow_form' if logged_in? %>
        <% if current_user?(@user) %>
          <%= link_to logout_path, method: :delete, data: { confirm: "ログアウトしますか?" } do %><i class="fas fa-cog fa-2x my-gray"></i><% end %>
        <% end %>
    　</section>
      <section class="statsarea">
        <%= render 'shared/stats' %>
      </section>
      <section class="profiletext">
        <%= @user.profiletext %>
        <%= link_to @user.website , @user.website %>
      </section>
    </div>
  </aside>
</div>

<div class="container posts">
  <div class="row">
    <% if @user.posts.any? %>
      <h3>投稿数 (<%= @user.posts.count %>)</h3>
      <br>
      <% @user.posts.each do |post| %>
        <div class="col-sm-12 col-sm-4 picresize">
          <%= link_to "/posts/#{post.id}" do %><%= image_tag "#{post.picture}", :class => "img-fluid mx-auto d-block" if post.picture?%><% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
