<% @users.each do |user| %>
<li>
  <div class"inline_block"><%= gravatar_for user, size: 30 %></div>
  <div class"inline_block">
    <div><%= link_to user.name, user %></span>
    <div><%= link_to user.username, user %></span>
  </div>
  <div class"inline_block"><%= render 'follow_form2',:locals => {:@user => user} if logged_in? %></div>
</li>
<% end %>